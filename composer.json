{
    "name": "rapideinternet/clamav-validator",
    "description": "Custom Laravel 5 anti-virus validator for file uploads.",
    "keywords": [
        "laravel",
        "validator",
        "clamav",
        "virus"
    ],
    "homepage": "https://github.com/rapideinternet/clamav-validator",
    "license": "MIT",
    "authors": [
        {
            "name": "Krishnaprasad MG",
            "email": "sunspikes@gmail.com"
        },
        {
            "name": "Siemen Boelkens",
            "email": "siemen@rapide.software"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "illuminate/support": "~5.0 || ^6.0 || ^7.0 || ^8.0",
        "illuminate/validation": "~5.0 || ^6.0 || ^7.0 || ^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "4.*",
        "mockery/mockery": "1.2.*",
        "scrutinizer/ocular": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Sunspikes\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sunspikes\\ClamavValidator\\ClamavValidatorServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sunspikes\\Tests\\ClamavValidator\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
